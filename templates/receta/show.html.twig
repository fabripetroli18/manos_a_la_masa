{% extends 'base.html.twig' %}

{% block title %}Receta{% endblock %}

{% block body %}
    <h1>Receta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recetum.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ recetum.descripcion }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img src="{{ asset('uploads/imagenes/' ~ recetum.imagen) }}"></img></td>
            </tr>
            <tr>
                <th>Detalle</th>
                <td>{{ recetum.detalle }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ recetum.fecha ? recetum.fecha|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('receta_index') }}">back to list</a>

    {% if recetum is defined %}
        {% if recetum.usuario == usuario %}
            <a href="{{ path('receta_edit', {'id': recetum.id}) }}">edit</a>
            {{ include('receta/_delete_form.html.twig') }}
        {% else %}
            Esta receta no te pertenece
        {% endif %}
    {% else %}
        <a href="{{ path('receta_edit', {'id': recetum.id}) }}">edit</a>
        {{ include('receta/_delete_form.html.twig') }}
    {% endif %}

    
{% endblock %}
