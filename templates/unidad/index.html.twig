{% extends 'base.html.twig' %}

{% block title %}Unidad{% endblock %}

{% block body %}
     <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Unidad</h1>
    </div>
    <div class="table-responsive">
        <table class="datatable table table-striped table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for unidad in unidads %}
                <tr>
                    <td>{{ unidad.id }}</td>
                    <td>{{ unidad.descripcion }}</td>
                    <td>
                        <a href="{{ path('unidad_show', {'id': unidad.id}) }}">mostrar</a>
                        <a href="{{ path('unidad_edit', {'id': unidad.id}) }}">editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">sin registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('unidad_new') }}">Nueva Unidad</a>
{% endblock %}
