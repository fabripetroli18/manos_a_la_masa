{% extends 'base.html.twig' %}

{% block title %}Unidad{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Unidad</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unidad.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ unidad.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('unidad/_delete_form.html.twig') }}

    {% if existe is defined %}
    	{% if existe %}
    		<div class="alert alert-danger" role="alert">
                 No se puede eliminar, esta unidad esta siendo utilizada
            </div>
    	{% endif %}
    {% endif %}
{% endblock %}
