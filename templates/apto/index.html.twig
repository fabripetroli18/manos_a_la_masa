{% extends 'base.html.twig' %}

{% block title %}Apto index{% endblock %}

{% block body %}
    <h1>Apto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apto in aptos %}
            <tr>
                <td>{{ apto.id }}</td>
                <td>{{ apto.descripcion }}</td>
                <td>
                    <a href="{{ path('apto_show', {'id': apto.id}) }}">show</a>
                    <a href="{{ path('apto_edit', {'id': apto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('apto_new') }}">Create new</a>
{% endblock %}
