{% extends 'baseLogin.html.twig' %}

{% block title %}Ingresar!{% endblock %}

{% block body %}
    <section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Manos a la Masa</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Tiene Cuenta?</h3>
		      	<form method="post" class="signin-form">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Usted esta logueado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <div class="form-floating">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="email" required autofocus>   
                        </div>
                    </div>
	                <div class="form-group">
                        <div class="form-floating">
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="password" required>
                        </div>
	                </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Ingresar</button>
                    </div>
                    <div class="form-group d-md-flex">
                        <div class="w-50 text-md-right">
                            <a href="/register" style="color: #fff">Registrarse</a>
                        </div>
                    </div>
	            </form>
		      </div>
			</div>
		</div>
	</section>
{% endblock %}
